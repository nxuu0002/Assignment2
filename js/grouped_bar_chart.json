{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/nxuu0002/Assignment2/main/data/case%20by%20age%20group%20and%20sex.csv"
  },
  "background": "#f0f8ff",
  "width":55,
  "height":350,
  "transform": [
    {"calculate": "datum.Sex == 2 ? 'Male':'Female'", "as": "gender"}
  ],
  "width": {"step": 20},
  "mark": "bar",
  "encoding": {
    "column": {"field": "Age", "type": "ordinal", "spacing": 9},
    "y": {
      "aggregate": "sum",
      "field": "Population",
      "title": "Case",
      "axis": {"grid": false,
              "labelFontSize":"12",
              "titleFontSize":14}
    },
    "x": {"field": "Sex",
          "axis": {"title": "",
                   "labelFontSize":"12",
                   "labelAngle":-45,
                   "titleFontSize":14}},
    "color": {"field": "Sex", "scale": {"range": ["#fa9fb5", "#2b8cbe"]}},
    "tooltip": [
      {"field": "Age", "type": "nominal"},
      {"field": "Sex", "type": "nominal"},
      {"field": "Population", "type": "quantitative", "format": ","}]
  },

  "config": {"view": {"stroke": "transparent"}, 
             "axis": {"domainWidth": 1}}

  
}
