{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width":760,
  "height":300,
  "data": {"url": "https://raw.githubusercontent.com/nxuu0002/Assignment2/main/data/victoria_case.csv"},
    "mark": {
      "type": "line"
    },

  "encoding": {
    "x": {
      "timeUnit":"month",
      "field": "Date",
      "type": "temporal",
      "axis": {
        "tickCount": 6,
        "labelAngle":0,
        "labelFontSize":12,
        "titleFontSize":14}      
      },
    "y": {
      "field": "Cumulative_Case_Count",
      "type":"quantitative",
      "axis": {
        "tickCount": 6,
        "labelFontSize":12,
        "titleFontSize":14}
      },

      "tooltip":[
        {"field":"State","type":"nominal"},
        {"field":"Date","type":"temporal"},
        
        {"field":"Cumulative_Case_Count","type":"quantitative"}]
        
  },
    "layer":[{
    "selection": {
    "month_highlight":{
    "type":"multi",
    "field":["Date"],
    "bind":"legend"
    }
  },
  "mark":"line",
  "encoding":{
    "opacity": {
      "condition": {"selection": "month_highlight"}
      }, 
    "tooltip":[
      {"field":"State","type":"nominal"},
      {"field":"Date","type": "temporal"},
      {"field":"Cumulative_Case_Count","type":"quantitative"}]
      }
  },
    {
      "mark":{
      "type":"text",
      "baseline":"left",
      "align":"left",
      "fontSize":"13"},
      "encoding":{
        "text":{"field":"Cumulative_Case_Count"},
        "color":{"value":"black"}, 
     "tooltip":[
      {"field":"State","type":"nominal"},
      {"field":"Date","type": "temporal"},
      {"field":"Cumulative_Case_Count","type":"quantitative"} 
      ]
    }
  }
]
}
